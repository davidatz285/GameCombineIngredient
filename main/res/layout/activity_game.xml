<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:id="@+id/root">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:id="@+id/ivCanvas"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/btn_add_sausage"
            android:layout_weight="1"
            android:background="@drawable/sausage"/>
        <Button
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/btn_add_bun"
            android:layout_weight="1"
            android:background="@drawable/bun"/>
        <Button
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/btn_add_meat"
            android:layout_weight="1"
            android:background="@drawable/meat"/>

    </LinearLayout>

</LinearLayout>